<% was_validated = vote.errors.any? %>

<%= form_with(model: vote, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% photo_id_class = "form-control" %>
    <% photo_id_was_invalid = vote.errors.include?(:photo_id) %>

    <% if was_validated %>
      <% if photo_id_was_invalid %>
        <% photo_id_class << " is-invalid" %>
      <% else %>
        <% photo_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo_id %>
    <%= f.number_field :photo_id, class: photo_id_class, placeholder: "Enter photo" %>
    <% if photo_id_was_invalid %>
      <% vote.errors.full_messages_for(:photo_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% blah_class = "form-control" %>
    <% blah_was_invalid = vote.errors.include?(:blah) %>

    <% if was_validated %>
      <% if blah_was_invalid %>
        <% blah_class << " is-invalid" %>
      <% else %>
        <% blah_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :blah %>
    <%= f.number_field :blah, class: blah_class, placeholder: "Enter blah" %>
    <% if blah_was_invalid %>
      <% vote.errors.full_messages_for(:blah).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
